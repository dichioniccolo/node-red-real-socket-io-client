{
  "name": "node-red-contrib-real-socket-io-client",
  "version": "1.0.3",
  "description": "Real socket-io client for Node-RED",
  "scripts": {
    "add-node": "node ./utils/add-node.js",
    "copy": "copyfiles -u 2 \"./src/nodes/**/*.{png,svg}\" \"./dist/nodes/\"",
    "build:editor": "rollup -c rollup.config.editor.js",
    "build:editor:watch": "rollup -c rollup.config.editor.js -w",
    "build:runtime": "tsc -p tsconfig.runtime.json",
    "build:runtime:watch": "tsc -p tsconfig.runtime.watch.json --watch --preserveWatchOutput",
    "build": "rm -rf dist && pnpm copy && pnpm build:editor && pnpm build:runtime",
    "test": "jest --forceExit --detectOpenHandles --colors",
    "test:watch": "jest --forceExit --detectOpenHandles --watchAll",
    "dev": "rm -rf dist && pnpm copy && concurrently --kill-others --names 'COPY,EDITOR,RUNTIME,TEST' --prefix '({name})' --prefix-colors 'yellow.bold,cyan.bold,greenBright.bold,magenta.bold' 'onchange -v \"src/**/*.png\" \"src/**/*.svg\" -- pnpm copy' 'pnpm build:editor:watch' 'pnpm build:runtime:watch' 'sleep 10; pnpm test:watch'",
    "lint": "prettier --ignore-path .eslintignore --check '**/*.{js,ts,md}'; eslint --ext .js,.ts .",
    "lint:fix": "prettier --ignore-path .eslintignore --write '**/*.{js,ts,md}'; eslint --ext .js,.ts . --fix",
    "release": "pnpm changeset version && pnpm changeset publish"
  },
  "author": "Niccolo' Di Chio",
  "license": "MIT",
  "node-red": {
    "nodes": {
      "socket-io-config": "./dist/nodes/socket-io-config/socket-io-config.js",
      "socket-io-out": "./dist/nodes/socket-io-out/socket-io-out.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^25.0.3",
    "@types/node-red": "^1.1.1",
    "@types/node-red-node-test-helper": "^0.3.5",
    "@types/sinon": "^21.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "colorette": "^2.0.20",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^13.0.0",
    "jest": "^30.2.0",
    "mustache": "^4.2.0",
    "node-red": "^4.1.2",
    "node-red-node-test-helper": "^0.3.5",
    "onchange": "^7.0.2",
    "prettier": "^3.7.4",
    "rollup": "^4.53.5",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}